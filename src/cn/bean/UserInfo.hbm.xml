<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.bean">
	<class name="UserInfo" table="user_info">
		<id name="id" column="id" type="long">
			<generator class="identity"></generator>
		</id>
		<property name="name" column="name" type="string" length="50" />
		<property name="number" column="number" type="string" length="100" />
		<property name="address" column="address" type="string" length="300" />
		<property name="phone" column="phone" type="string" length="20" />
		<property name="job" column="job" type="string" length="20" />
	</class>
</hibernate-mapping>